<Page loaded="onPageLoaded" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns="http://www.nativescript.org/tns.xsd">
  <drawer:SideDrawer id="sideDrawer">
    <drawer:RadSideDrawer.mainContent>
        <StackLayout cssClass="mainContent">
            <ScrollView>
                <Label textSize="30" text="Open the drawer from the left of the screen to change the transition." textWrap="true"/>
            </ScrollView>
            <Button text="open drawer" tap="{{ openSideDrawer }}"/>
        </StackLayout>
    </drawer:RadSideDrawer.mainContent>
    <drawer:RadSideDrawer.drawerContent>
        <StackLayout cssClass="drawerContent">
          <StackLayout cssClass="headerContent">
            <Label text="Tap to change transition:"/>
          </StackLayout>
          <StackLayout>
              <Button text="Fade Transition" tap="{{ onFadeTransitionTap }}"/>
              <Button text="Push Transition" tap="{{ onPushTransitionTap }}"/>
              <Button text="Reveal Transition" tap="{{ onRevealTransitionTap }}"/>
              <Button text="ReverseSlideOut Transition" tap="{{ onReverseSlideOutTransitionTap }}"/>
              <Button text="ScaleDownPusher Transition" tap="{{ onScaleDownPusherTransitionTap }}"/>
              <Button text="ScaleUp Transition" tap="{{ onScaleUpTransitionTap }}"/>
              <Button text="SlideAlong Transition" tap="{{ onSlideAlongTransitionTap }}"/>
              <Button text="SlideInOnTop Transition" tap="{{ onSlideInOnTopTransitionTap }}"/>
          </StackLayout>
        </StackLayout>
    </drawer:RadSideDrawer.drawerContent>
  </drawer:RadSideDrawer>
</Page>
