<Page loaded="onPageLoaded" xmlns:rc="nativescript-telerik-ui/calendar" xmlns="http://www.nativescript.org/tns.xsd">
	<GridLayout rows="*, 100" orientation="vertical">
        <!--<Label text="PopulatingWithData" cssClass="example-header"/>-->
        <rc:RadCalendar id="calendar" 
		    eventSource="{{ eventSource }}"
            dateSelected="onDateSelected"
            row="0"/>
        <ListView items="{{ myItems }}" rowHeight="44" row="1">
            <ListView.itemTemplate>
                <Label text="{{title}}" marginLeft="10" />
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>