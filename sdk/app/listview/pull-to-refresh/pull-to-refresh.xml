<Page loaded="onPageLoaded" xmlns:lv="nativescript-telerik-ui/listview" xmlns="http://www.nativescript.org/tns.xsd">
    <GridLayout orientation="vertical" rows="auto, *">
        <Label text="Swipe left or right to execute" cssClass="example-header"/>
        <lv:ListView items="{{ dataItems }}" pullToRefresh="true" row="1" shouldRefreshOnPull="{{onShouldRefreshOnPull}}">
            <lv:ListView.listViewLayout>
                <lv:ListViewLinearLayout itemHeight="50" scrollDirection="Vertical"/>
            </lv:ListView.listViewLayout>
            <lv:ListView.itemTemplate>
                <StackLayout orientation="vertical">
                    <Label fontSize="20" text="{{ itemName }}"/>
                    <Label fontSize="14" text="{{ itemDescription }}"/>
                </StackLayout>
            </lv:ListView.itemTemplate>
        </lv:ListView>
    </GridLayout>
</Page>
