<Page loaded="onPageLoaded" xmlns:lv="nativescript-telerik-ui/listview" xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout orientation="vertical" rows="auto, *, auto">
        <Label cssClass="example-header" text="Hold and drag to reorder"/>
        <lv:RadListView didReorderItem="{{onItemReordered}}" items="{{ dataItems }}" row="1" cellReorder="true">
            <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout itemHeight="50" scrollDirection="Vertical"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <StackLayout orientation="vertical">
                    <Label fontSize="20" text="{{ itemName }}"/>
                    <Label fontSize="14" text="{{ itemDescription }}"/>
                </StackLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>

</Page>
