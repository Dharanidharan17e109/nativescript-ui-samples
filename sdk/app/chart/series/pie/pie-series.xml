
<!-- >> pie-series -->
<navigation:ExamplePage xmlns:navigation="navigation/example-page" loaded="onPageLoaded" xmlns:chart="nativescript-telerik-ui-pro/chart" xmlns="http://www.nativescript.org/tns.xsd">
    <StackLayout orientation="vertical">
    
    <chart:RadPieChart id="pieChart" height="300" allowAnimation="true">
        <chart:RadPieChart.series>
            <chart:PieSeries selectionMode="DataPoint" expandRadius="1.3" outerRadiusFactor="0.7" items="{{ pieSource }}" valueProperty="Amount" legendLabelProperty="Brand">
            </chart:PieSeries>
        </chart:RadPieChart.series>
        
        <chart:RadPieChart.legend>
            <chart:RadLegendView position="Floating" offsetOrigin="TopRight"  verticalOffset="80"  width="150"/>
        </chart:RadPieChart.legend>
    </chart:RadPieChart>
  
    <chart:RadPieChart id="donutChart" height="300"  allowAnimation="true">
        <chart:RadPieChart.series>
            <chart:DonutSeries  selectionMode="DataPoint" outerRadiusFactor="0.9" expandRadius="1.3"  outerRadiusFactor="0.7" innerRadiusFactor="0.4" items="{{ pieSource }}" valueProperty="Amount" legendLabelProperty="Brand">
            </chart:DonutSeries>
        </chart:RadPieChart.series>
        
        <chart:RadPieChart.legend>
            <chart:RadLegendView position="Floating" offsetOrigin="TopRight"  verticalOffset="80"  width="150"/>
        </chart:RadPieChart.legend>  
    </chart:RadPieChart>   
    </StackLayout>
</navigation:ExamplePage>
<!-- << pie-series -->