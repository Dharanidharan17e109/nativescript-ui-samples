<Page loaded="onPageLoaded" xmlns:chart="nativescript-telerik-ui/chart" xmlns="http://www.nativescript.org/tns.xsd">
    <chart:RadPieChart id="pieChart" width="300" height="300">
        <chart:RadPieChart.series>
            <chart:PieSeries items="{{ pieSource }}" valueProperty="Amount">
            </chart:PieSeries>
        </chart:RadPieChart.series>
    </chart:RadPieChart>
</Page>
