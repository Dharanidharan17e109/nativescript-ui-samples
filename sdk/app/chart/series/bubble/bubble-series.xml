<Page loaded="onPageLoaded" xmlns:chart="nativescript-telerik-ui/chart" xmlns="http://www.nativescript.org/tns.xsd">
    <chart:RadCartesianChart id="pieChart">
        <chart:RadCartesianChart.series>
            <chart:BubbleSeries  items="{{ bubbleCategoricalSource }}" bubbleScale="5" categoryProperty="Country" valueProperty="Amount" bubbleSizeProperty="Impact" >
                <chart:BubbleSeries.horizontalAxis>
                    <chart:CategoricalAxis/>
                </chart:BubbleSeries.horizontalAxis>
                <chart:BubbleSeries.verticalAxis>
                    <chart:LinearAxis />
                </chart:BubbleSeries.verticalAxis>
            </chart:BubbleSeries>
        </chart:RadCartesianChart.series>
    </chart:RadCartesianChart>
</Page>
