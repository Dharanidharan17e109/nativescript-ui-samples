<Page loaded="onPageLoaded" xmlns:chart="nativescript-telerik-ui/chart" xmlns="http://www.nativescript.org/tns.xsd">
    <chart:CartesianChart id="cartesianChart">
        <chart:CartesianChart.series>
            <chart:LineSeries legendTitle="Line series" items="{{ categoricalSource }}" stackMode="Stack" categoryProperty="Country" valueProperty="Amount">

            </chart:LineSeries>
            <chart:AreaSeries legendTitle="Area series" items="{{ categoricalSource }}" stackMode="Stack" categoryProperty="Country" valueProperty="Amount">

            </chart:AreaSeries>
            <chart:BarSeries legendTitle="Bar series" items="{{ categoricalSource }}" stackMode="Stack" categoryProperty="Country" valueProperty="Amount">
            </chart:BarSeries>
        </chart:CartesianChart.series>


        <chart:CartesianChart.horizontalAxis>
            <chart:CategoricalAxis/>
        </chart:CartesianChart.horizontalAxis>
        <chart:CartesianChart.verticalAxis>
            <chart:LinearAxis/>
        </chart:CartesianChart.verticalAxis>

                <chart:CartesianChart.legend>
            <chart:LegendView position="Top" height="150" />
        </chart:CartesianChart.legend>

    </chart:CartesianChart>
</Page>
